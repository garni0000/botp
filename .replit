externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["node", "server/index.js"]
build = ["npm", "run", "build"]

[userenv]

[userenv.production]
PORT = "5000"
